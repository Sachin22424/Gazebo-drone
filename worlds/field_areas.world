            </box>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.2 0.7</ambient>
            <diffuse>0.9 0.9 0.2 0.7</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Area 4: Purple (Bottom-Left) -->
    <model name="area_4">
      <static>true</static>
      <pose>-10 0 0.01 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>10 10 0.01</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.2 0.8 0.7</ambient>
